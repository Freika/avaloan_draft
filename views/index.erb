<table border=1>
  <tr>
    <th>Title</th>
    <th>Balance</th>
    <th>Rate</th>
    <th>Payment</th>
    <th>Interest</th>
  </tr>
  <% loans.each do |loan| %>
    <tr>
      <td><%= loan[:title] %></td>
      <td><%= loan[:balance] %></td>
      <td><%= loan[:rate] %></td>
      <td><%= loan[:payment] %></td>
      <td><%= loan[:interest] %></td>
    </tr>
  <% end %>
</table>

